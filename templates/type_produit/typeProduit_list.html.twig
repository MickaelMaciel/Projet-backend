{% extends "_template.html.twig" %}

{% block title %}Type de produit{% endblock %}

{% block content %}
    <div class="section">
        <h1 class="title">Type de produit: {{typeProduit_list|length}}</h1>
    </div>

      {% include "includes/flash.html.twig" %}

    <table class="table is-fullwidth">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th><a href="{{path('typeProduit_add')}}" class="button is-info is-small">Nouveau typeProduit</a></th>
            </tr>
        </thead>
        <tbody>
            {% for typeProduit in typeProduit_list %}
                <tr>
                    <td>{{typeProduit.name|slice(0,25)}}</td>
                    
                    <td>
                        <a href="{{path('typeProduit_edit',{id:typeProduit.id})}}" class="button is-small is-success"><i class="fas fa-edit"></i></a>
                        <a href="{{path('typeProduit_delete',{id:typeProduit.id})}}" class="button is-small is-danger"><i class="fas fa-trash-alt"></i></a>
                    </td>
                    
                </tr>
                
            {% endfor %}
        </tbody>
    </table>    
{% endblock %}